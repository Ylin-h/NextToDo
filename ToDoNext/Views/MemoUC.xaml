<UserControl
    x:Class="ToDoNext.Views.MemoUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ToDoNext.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsRightDrawerOpen}">
            <md:DrawerHost.RightDrawerContent>
                <StackPanel MinWidth="300" Orientation="Vertical">
                    <TextBlock
                        Margin="10,10,0,0"
                        FontSize="15"
                        Text="添加备忘录" />
                    <TextBox
                        Margin="10,10,0,0"
                        VerticalContentAlignment="Bottom"
                        md:HintAssist.Hint="标题"
                        FontSize="15"
                        Text="{Binding Title}" />
                    <TextBox
                        Margin="10,10,0,0"
                        VerticalContentAlignment="Bottom"
                        md:HintAssist.Hint="内容"
                        FontSize="15"
                        Text="{Binding Content}" />
                    <StackPanel Orientation="Vertical">
                        <Button
                            Margin="10,10,0,0"
                            Command="{Binding AddMemoCommand}"
                            Content="添加" />
                        <Button
                            Margin="10,10,0,0"
                            Command="{Binding CloseRightDrawerCommand}"
                            Content="取消" />
                    </StackPanel>
                </StackPanel>
            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <md:Snackbar
                    Grid.RowSpan="2"
                    Panel.ZIndex="1"
                    MessageQueue="{Binding MemoMessageQueue}" />
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBox
                        Margin="10,0,0,0"
                        VerticalContentAlignment="Bottom"
                        md:HintAssist.Hint="查找备忘录"
                        md:TextFieldAssist.HasClearButton="True"
                        FontSize="15"
                        Text="{Binding SearchTitle, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </StackPanel>
                <Button
                    Margin="0,10,10,10"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseRightDrawerCommand}"
                    Content="添加备忘录" />
                <StackPanel Grid.Row="1" Visibility="{Binding Visibility}">
                    <TextBlock
                        Margin="10,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Text="没有找到备忘录，请添加备忘录！！！" />
                </StackPanel>
                <Grid Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding MemoList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!--  动画过度效果，但是这里可能版本问题，暂时注释掉  -->
                                    <!--<md:TransitioningContentControl OpeningEffect="md:TransitionEffect Kind="" />-->
                                    <Border
                                        Width="100"
                                        Height="100"
                                        Margin="10,10,0,0"
                                        Background="CadetBlue"
                                        CornerRadius="5">
                                        <StackPanel Orientation="Vertical">
                                            <DockPanel LastChildFill="False">
                                                <md:PopupBox Panel.ZIndex="1" DockPanel.Dock="Right">
                                                    <Button
                                                        Command="{Binding DataContext.DeleteMemoCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}"
                                                        CommandParameter="{Binding}"
                                                        Content="删除" />
                                                </md:PopupBox>
                                                <TextBlock
                                                    Margin="10,10,0,0"
                                                    DockPanel.Dock="Top"
                                                    FontSize="15"
                                                    FontWeight="Bold"
                                                    Text="{Binding Title}" />
                                            </DockPanel>
                                            <TextBlock
                                                Margin="10,10,0,0"
                                                FontSize="12"
                                                Text="{Binding Content}" />
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>
