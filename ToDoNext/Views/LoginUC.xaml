<UserControl
    x:Class="ToDoNext.Views.LoginUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Interactions="using:Microsoft.Xaml.Interactions.Core"
    xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ToDoNext.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:pwdex="clr-namespace:ToDoNext.Extensions"
    Width="600"
    Height="300"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <prism:Dialog.WindowStyle>
        <Style TargetType="Window">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="350" />
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
            <Setter Property="ResizeMode" Value="NoResize" />
            <Setter Property="prism:Dialog.WindowStartupLocation" Value="CenterScreen" />
        </Style>
    </prism:Dialog.WindowStyle>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <md:Snackbar
            x:Name="MsgBar"
            Grid.ColumnSpan="2"
            MessageQueue="{md:MessageQueue}" />
        <Image
            Grid.Column="0"
            Width="300"
            Height="300"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Source="pack://application:,,,/Resource/6.jpg" />
        <!--  materialdesign中的显示两个内容，默认选着下标为零的界面，当点击按钮切换时，会自动切换到下标为1的界面  -->
        <md:Transitioner
            Grid.Column="1"
            Margin="5"
            VerticalAlignment="Center"
            SelectedIndex="{Binding SelectedIndex, Mode=TwoWay}">
            <!--  其中一个界面  -->
            <md:TransitionerSlide>

                <DockPanel Margin="10">
                    <TextBlock
                        Margin="10"
                        DockPanel.Dock="Top"
                        FontSize="24"
                        Text="欢迎使用 NextToDo" />
                    <TextBox
                        Margin="0,10"
                        md:HintAssist.Hint="请输入用户名"
                        DockPanel.Dock="Top"
                        Text="{Binding Username}" />
                    <PasswordBox
                        Margin="0,10"
                        md:HintAssist.Hint="请输入密码"
                        pwdex:PasswordBoxExtend.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        DockPanel.Dock="Top">
                        <i:Interaction.Behaviors>
                            <pwdex:PasswordBoxBehavior />
                        </i:Interaction.Behaviors>
                    </PasswordBox>

                    <Button
                        Width="350"
                        Height="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Command="{Binding LoginCommand}"
                        Content="登录"
                        DockPanel.Dock="Top" />
                    <DockPanel Margin="0,5" LastChildFill="False">
                        <TextBlock
                            Margin="10"
                            DockPanel.Dock="Left"
                            FontSize="14"
                            Text="还没有账号？">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonDown">
                                    <i:InvokeCommandAction Command="{Binding LoginOrRegisterCommand}" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseEnter">
                                    <i:ChangePropertyAction PropertyName="Foreground" Value="Blue" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeave">
                                    <i:ChangePropertyAction PropertyName="Foreground" Value="Black" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                        <TextBlock
                            Margin="10"
                            DockPanel.Dock="Right"
                            FontSize="14"
                            Text="忘记密码？">
                            <i:Interaction.Triggers>

                                <i:EventTrigger EventName="MouseEnter">
                                    <i:ChangePropertyAction PropertyName="Foreground" Value="Blue" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="MouseLeave">
                                    <i:ChangePropertyAction PropertyName="Foreground" Value="Black" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBlock>
                    </DockPanel>
                </DockPanel>
            </md:TransitionerSlide>
            <!--  其中另一个界面  -->
            <DockPanel
                Margin="10"
                Background="White"
                LastChildFill="False">
                <TextBlock
                    Margin="10"
                    DockPanel.Dock="Top"
                    FontSize="24"
                    Text="注册 NextToDo" />
                <TextBox
                    Margin="0,10"
                    md:HintAssist.Hint="请输入用户名"
                    DockPanel.Dock="Top"
                    Text="{Binding MyVar.NickName}" />
                <PasswordBox
                    Margin="0,10"
                    md:HintAssist.Hint="请输入密码"
                    pwdex:PasswordBoxExtend.Password="{Binding MyVar.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    DockPanel.Dock="Top">
                    <i:Interaction.Behaviors>
                        <pwdex:PasswordBoxBehavior />
                    </i:Interaction.Behaviors>
                </PasswordBox>
                <PasswordBox
                    Margin="0,10"
                    md:HintAssist.Hint="请输入密码"
                    pwdex:PasswordBoxExtend.Password="{Binding MyVar.ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    DockPanel.Dock="Top">
                    <i:Interaction.Behaviors>
                        <pwdex:PasswordBoxBehavior />
                    </i:Interaction.Behaviors>
                </PasswordBox>
                <Button
                    Width="150"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Command="{Binding RegisterCommand}"
                    Content="注册"
                    DockPanel.Dock="Left" />
                <Button
                    Width="150"
                    Height="30"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Command="{Binding LoginOrRegisterCommand}"
                    Content="返回"
                    DockPanel.Dock="Right" />

            </DockPanel>
            <md:TransitionerSlide />
        </md:Transitioner>


    </Grid>
</UserControl>
