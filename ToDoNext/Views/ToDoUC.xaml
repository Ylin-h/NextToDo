<UserControl
    x:Class="ToDoNext.Views.ToDoUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ToDoNext.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <!--  添加事项右弹窗  -->
    <md:DialogHost>
        <md:DrawerHost IsRightDrawerOpen="{Binding IsRightDrawerOpen}">
            <md:DrawerHost.RightDrawerContent>
                <DockPanel MinWidth="300" Background="WhiteSmoke">

                    <TextBlock
                        Margin="10,10,0,0"
                        DockPanel.Dock="Top"
                        FontSize="20"
                        FontWeight="Bold"
                        Text="添加待办事项" />
                    <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
                        <TextBlock
                            Margin="10,10,0,10"
                            VerticalAlignment="Center"
                            FontSize="15"
                            Text="状态:" />
                        <ComboBox FontSize="15" SelectedIndex="{Binding Status}">
                            <ComboBoxItem>未完成</ComboBoxItem>
                            <ComboBoxItem>已完成</ComboBoxItem>
                        </ComboBox>

                    </StackPanel>

                    <StackPanel Margin="0,0,10,10">
                        <TextBox
                            Margin="10,10"
                            VerticalAlignment="Center"
                            md:HintAssist.Hint="请输入待办事项标题"
                            FontSize="15"
                            Text="{Binding Title}" />
                        <TextBox
                            Margin="10,10"
                            VerticalAlignment="Center"
                            md:HintAssist.Hint="请输入待办事项内容"
                            FontSize="15"
                            Text="{Binding Content}" />
                        <Button
                            Width="300"
                            Margin="10,10"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding AddTodoCmd}"
                            Content="添加"
                            FontSize="15" />
                    </StackPanel>
                </DockPanel>
            </md:DrawerHost.RightDrawerContent>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <md:Snackbar
                    Grid.RowSpan="2"
                    Panel.ZIndex="1"
                    MessageQueue="{Binding ToDoMessageQueue}" />
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBox
                        Margin="10,10"
                        VerticalAlignment="Center"
                        md:HintAssist.Hint="查找待办事项"
                        md:TextFieldAssist.HasClearButton="True"
                        FontSize="15"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCmd}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    <TextBlock
                        Margin="10,10"
                        VerticalAlignment="Center"
                        FontSize="15"
                        FontWeight="Bold"
                        Text="筛选" />
                    <ComboBox SelectedIndex="{Binding FilterStatus, Mode=TwoWay}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding SearchCmd}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBoxItem>全部</ComboBoxItem>
                        <ComboBoxItem>未完成</ComboBoxItem>
                        <ComboBoxItem>已完成</ComboBoxItem>
                    </ComboBox>


                </StackPanel>
                <Button
                    Margin="10,10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Command="{Binding ShowCmm}"
                    FontSize="15">
                    +添加待办
                </Button>
                <TextBlock
                    Grid.Row="1"
                    Margin="10,10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="15"
                    Text="找不到待办事项，快去添加吧！"
                    Visibility="{Binding Visibility}" />
                <Grid Grid.Row="1">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ItemsControl ItemsSource="{Binding ToDoList}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="100"
                                        Height="100"
                                        Margin="10,10,0,0"
                                        Background="{Binding Color}"
                                        CornerRadius="5">
                                        <DockPanel LastChildFill="False">
                                            <md:PopupBox
                                                Margin="0,-70,-5,0"
                                                Panel.ZIndex="1"
                                                DockPanel.Dock="Right">
                                                <Button
                                                    Command="{Binding DataContext.DeleteTodoCmd, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Content="删除" />
                                            </md:PopupBox>
                                            <TextBlock
                                                Margin="5,5,10,0"
                                                DockPanel.Dock="Top"
                                                FontSize="15"
                                                FontWeight="Bold"
                                                Text="{Binding Title}" />
                                            <TextBlock
                                                Margin="5,10,0,0"
                                                HorizontalAlignment="Center"
                                                FontSize="12"
                                                Text="{Binding Content}" />

                                        </DockPanel>

                                    </Border>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>

                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </md:DrawerHost>
    </md:DialogHost>
</UserControl>
