<UserControl
    x:Class="ToDoNext.Views.IndexUC"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ToDoNext.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontFamily="微软雅黑"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <md:Snackbar
            x:Name="info"
            Grid.RowSpan="3"
            Panel.ZIndex="1"
            MessageQueue="{Binding MessageQueue}" />
        <TextBlock
            Margin="10,10,10,0"
            FontSize="24"
            Foreground="#369ECE"
            Text="{Binding Title}" />
        <ItemsControl
            x:Name="IndexItems"
            Grid.Row="1"
            ItemsSource="{Binding IndexItems}">
            <!--  itemsControl里面无法使用事件绑定  -->
            <!--<i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding NavigateCommand}" CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>-->
            <!--  面板  -->
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <!--  项模板  -->
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="10"
                        Background="{Binding BackColor}"
                        CornerRadius="5"
                        Cursor="{Binding Hand}">
                        <Border.InputBindings>
                            <MouseBinding
                                Command="{Binding DataContext.NavigateCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=ItemsControl}}"
                                CommandParameter="{Binding}"
                                MouseAction="LeftClick" />
                        </Border.InputBindings>
                        <Grid>
                            <StackPanel Margin="10">
                                <md:PackIcon
                                    Width="20"
                                    Height="20"
                                    FontSize="15"
                                    Kind="{Binding Icon}" />
                                <TextBlock
                                    Margin="0,10"
                                    FontSize="15"
                                    Text="{Binding Name}" />
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Text="{Binding Value}" />
                            </StackPanel>
                            <!--  画背景  -->
                            <Canvas ClipToBounds="True">
                                <Border
                                    Canvas.Top="10"
                                    Canvas.Right="-10"
                                    Width="50"
                                    Height="50"
                                    Background="#ffffff"
                                    CornerRadius="40"
                                    Opacity="0.1" />
                                <Border
                                    Canvas.Top="30"
                                    Canvas.Right="-3"
                                    Width="50"
                                    Height="50"
                                    Background="#ffffff"
                                    CornerRadius="90"
                                    Opacity="0.1" />
                            </Canvas>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border
                Margin="10,0"
                Background="#bebebe"
                CornerRadius="5"
                Opacity="0.1" />
            <DockPanel Margin="10,0">
                <DockPanel
                    Margin="10,5"
                    DockPanel.Dock="Top"
                    LastChildFill="False">
                    <TextBlock
                        DockPanel.Dock="Top"
                        FontSize="20"
                        Foreground="#CC6CE7"
                        Text="待办事项" />
                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,-20,0,0"
                        VerticalAlignment="Top"
                        Command="{Binding AddToDoCommand}"
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                        <md:PackIcon Kind="Plus" />
                    </Button>
                </DockPanel>

                <ListBox
                    HorizontalContentAlignment="Stretch"
                    DockPanel.Dock="Left"
                    ItemsSource="{Binding ToDoList}"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <!--<ListBox.InputBindings>
                        <MouseBinding
                            Command="{Binding UpdateToDoCommand, RelativeSource={RelativeSource FindAncestor, AncestorType=ListBox}}"
                            CommandParameter="{Binding}"
                            MouseAction="LeftDoubleClick" />
                    </ListBox.InputBindings>-->

                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding UpdateToDoCommand}" CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>


                    <ListBox.ItemTemplate>

                        <DataTemplate>
                            <DockPanel LastChildFill="False">
                                <ToggleButton
                                    Command="{Binding DataContext.CompleteCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}"
                                    CommandParameter="{Binding}"
                                    DockPanel.Dock="Right"
                                    IsChecked="{Binding Status}" />
                                <StackPanel Margin="10,0,0,0" DockPanel.Dock="Bottom">
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock
                                        FontSize="12"
                                        Opacity="0.5"
                                        Text="{Binding Content}" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>

            </DockPanel>
            <Border
                Grid.Column="1"
                Margin="10,0"
                Background="#bebebe"
                CornerRadius="5"
                Opacity="0.1" />
            <DockPanel Grid.Column="1" Margin="10,0">
                <DockPanel
                    Margin="10,5"
                    DockPanel.Dock="Top"
                    LastChildFill="False">
                    <TextBlock
                        DockPanel.Dock="Top"
                        FontSize="20"
                        Foreground="#CC6CE7"
                        Text="备忘录" />
                    <Button
                        Width="20"
                        Height="20"
                        Margin="0,-20,0,0"
                        VerticalAlignment="Top"
                        Command="{Binding ShowAddMemoCommand}"
                        DockPanel.Dock="Right"
                        Style="{StaticResource MaterialDesignFloatingActionButton}">
                        <md:PackIcon Kind="Plus" />
                    </Button>
                </DockPanel>
                <!--  隐藏滚动条  -->
                <ListBox
                    HorizontalContentAlignment="Stretch"
                    DockPanel.Dock="Left"
                    ItemsSource="{Binding MemoList}"
                    ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                    ScrollViewer.VerticalScrollBarVisibility="Hidden">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding UpdateMemoCommand}" CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=ListBox}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemTemplate>

                        <DataTemplate>
                            <DockPanel LastChildFill="False">
                                <!--<ToggleButton DockPanel.Dock="Right" />-->
                                <StackPanel Margin="10,0,0,0" DockPanel.Dock="Bottom">
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock
                                        FontSize="12"
                                        Opacity="0.5"
                                        Text="{Binding Content}" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </DockPanel>
        </Grid>

    </Grid>
</UserControl>
